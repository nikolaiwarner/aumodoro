= form_for(@context) do |f|
  - if @context.errors.any?
    #error_explanation
      %h2
        = pluralize(@context.errors.count, "error")
        prohibited this context from being saved:
      %ul
        - @context.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :default_pom_value
    %br/
    = f.text_field :default_pom_value
  .field
    = f.label :default_color
    %br/
    = f.text_field :default_color, { :class => 'color_picker'}
  .actions
    = f.submit
