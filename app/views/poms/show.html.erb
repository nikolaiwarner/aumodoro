<p id="notice"><%= notice %></p>


<% time_remaining = @pom.datetime + 25.minutes - Time.now %>
<% if time_remaining > 0 %>

  <script>
    Aumodoro.timer.seconds_elapsed = 1500 - <%= time_remaining.to_i %>;
    Aumodoro.timer.start();
  </script>

  <div id='timer'></div>

<% end %>




<hr/>



<p>
  <b>Start time:</b>
  <%= @pom.datetime %>
</p>

<p>
  <b>Success:</b>
  <%= @pom.success %>
</p>

<p>
  <b>User:</b>
  <%= @pom.user_id %>
</p>

<p>
  <b>Project:</b>
  <%= @pom.project.name if @pom.project %>
</p>

<p>
  <b>Description:</b>
  <%= @pom.description %>
</p>

<p>
  <b>Value:</b>
  <%= @pom.value %>
</p>




<div class='timer_display'>
  
</div>



