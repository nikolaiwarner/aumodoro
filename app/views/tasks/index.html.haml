- title "Tasks"

- content_for :actions do
  = link_to 'New Task', new_task_path


%ul.items
  - @tasks.each do |task|
    %li
      = check_box_tag :complete, task.complete, task.complete
      = link_to task.name, task_path(task)
      = task.project.name if task.project
      
%br/
= link_to 'New Task', new_task_path



= text_field_tag :name
= submit_tag 'Save'
