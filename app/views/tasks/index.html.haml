%h1 Listing tasks
%table
  %tr
    %th Project
    %th User
    %th Name
    %th Notes
    %th Complete
    %th
    %th
    %th
  - @tasks.each do |task|
    %tr
      %td= task.project_id
      %td= task.user_id
      %td= task.name
      %td= task.notes
      %td= task.complete
      %td= link_to 'Show', task
      %td= link_to 'Edit', edit_task_path(task)
      %td= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Task', new_task_path
